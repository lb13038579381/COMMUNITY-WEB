page {
  background-color: #ffffff;
}
.margin-bottom-60{
  margin-bottom: 60px;
}

.activity_detail_image {
  height: 400rpx;
}

.activity_detail_image>image {
  width: 100%;
  height: 100%;
}

.footer {
  width: 100%;
  padding: 20rpx 40rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}

.apply_btn {
  width: 100%;
  padding: 0 40rpx;
  font-size: 36rpx;
  height: 80rpx;
  color: var(--white);
  font-weight: bold;
}

.collect {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.collect_icon{
  width: 50rpx;
  height: 50rpx;
}

.title_icon{
  width: 30rpx;
  height: 30rpx;
}