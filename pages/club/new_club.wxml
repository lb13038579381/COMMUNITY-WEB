<!--pages/activity/article_apply.wxml-->
<view class="margin-xl">
  <view class="info">填写社团信息</view>
  <view class="padding-top text-grey padding-bottom-xl">请准确填写社团信息</view>
  <form bindsubmit="uploadImg">

    <view class="solids-bottom"></view>
    <view class="cu-form-group">
      <view class="text-xl title">名称</view>
      <input id="name" name="name" placeholder="请填写社团名称"></input>
    </view>

    <view class="solids-bottom"></view>
    <view class="cu-form-group">
      <view class="text-xl title">简介</view>
      <textarea id="introduction" name="introduction" maxlength="-1"></textarea>
    </view>

    <view class="solids-bottom"></view>
    <view class="cu-form-group">
      <view class="text-xl title">备注</view>
      <textarea id="remark" name="remark" maxlength="-1"></textarea>
    </view>

    <view class="">
      <label bindtap="chooseImg">点击选择封面</label>
      <image src="{{photos}}"></image>
      <button form-type="submit">提交</button>
    </view>
  </form>
</view>